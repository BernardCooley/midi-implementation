generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id
  email        String        @unique
  midiChannels MidiChannel[]
}

model MidiChannel {
  id        String @id
  channel   Int
  parameter String
  port      String
  userId    String
  user      User   @relation(fields: [userId], references: [id])
  deviceId  String
  device    Device @relation(fields: [deviceId], references: [id])
}

model Device {
  id             String        @id
  name           String
  manufacturerId String
  manufacturer   Manufacturers @relation(fields: [manufacturerId], references: [id])
  midiChannels   MidiChannel[]
}

model Manufacturers {
  id      String   @id
  name    String
  devices Device[]
}
